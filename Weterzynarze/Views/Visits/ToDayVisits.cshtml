@model IEnumerable<Weterzynarze.Models.Visit>

@{
    ViewBag.Title = "ToDayvisits";
}

<h2>Dzisiejsze wizyty</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zwierzak.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VisitDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Zwierzak.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Szczegóły", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Nie odbyła się", "Create","HistryVisits", new { Date = item.VisitDate }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
